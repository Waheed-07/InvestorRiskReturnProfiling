
application {
  config {
    baseName myApp
    applicationType monolith
    packageName com.myapp
    authenticationType jwt
    prodDatabaseType postgresql
    clientFramework react
  }
  entities *
}


entity PersonalDetails {
    FullName String required
    DateOfBirth Instant required
    CreatedAt Instant required
    UpdatedAt Instant
}
entity Country {
    Name String   
}
entity FinancialDetails{
	AnnualIncome Double required
    NetWorth Double required
    CurrentSavings Double 
  InvestmentExperience String required
  SourceOfFunds String required
  CreatedAt Instant required
  UpdatedAt Instant
}

entity Profession{
	Name String
    ConceptUri String
    IscoGroup String
    Description TextBlob
}
entity Country{
    Name String
    IsoCode String
}
entity Address{
    AddressLineOne String
    AddressLineTwo String
    PostalCode String
    City String
    Region String
    CountryCode String
}
entity Currency {
    Name String
    Code String
}
entity Contact{
    Contact String
}
entity Questions{
  QuestionText String required
  QuestionType String required
  CreatedAt Instant required
}
entity UserResponses{
  QuestionID Number
  ResponseText String required
  ResponseDate Instant required
}
entity Options{
 	OptionText String required
}

service * with serviceClass
dto all with mapstruct
